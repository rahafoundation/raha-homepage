{
  "name": "@raha/homepage",
  "version": "0.0.1",
  "description": "Google AMP static site for the Raha Foundation",
  "repository": "git@github.com:rahafoundation/raha-homepage.git",
  "license": "Apache-2.0",
  "private": true,
  "devDependencies": {
    "amphtml-validator": "^1.0.23",
    "colors": "^1.2.1",
    "concurrently": "^3.5.1",
    "gh-pages": "^1.1.0",
    "glob": "^7.1.2",
    "glob-promise": "^3.4.0",
    "handlebars": "^4.0.11",
    "handlebars-layouts": "^3.1.4",
    "live-server": "^1.2.0",
    "mkdirp": "^0.5.1",
    "static-i18n": "^0.2.1",
    "watch": "^1.0.2"
  },
  "scripts": {
    "build": "./scripts/build",
    "deploy:force":
      "yarn build && gh-pages -d build/ -m \"Updated website [skip ci]\"",
    "deploy": "./scripts/deploy",
    "lint": "./scripts/lint",
    "watch:build": "watch \"yarn build\" src/ locales/ scripts/",
    "serve":
      "concurrently --kill-others \"live-server ./build\" \"yarn watch:build\"",
    "start": "yarn serve"
  }
}
