body > header {
  display: flex;
  justify-content: space-between;
  align-items: center;

  height: 70px;
  margin-bottom: -1px;
  padding: 10px 20px;

  background: rgb(76, 175, 80);

  border-bottom: 1px solid white;
  box-shadow: rgb(239, 239, 239) 0px 2px 2px;
}

body > header > .headerLogo {
  height: 100%;
  color: white;
  font-size: 2rem;
  font-weight: 700;
  display: flex;
  align-items: center;
  text-decoration: none;
}

body > header > .headerLogo > .logo {
  color: white;
  height: 60%;
  margin-right: 20px;
}

body > header > .headerLogo > .tagline {
  font-style: italic;
  margin-left: 15px;
  white-space: nowrap;
  font-size: 80%;
}
