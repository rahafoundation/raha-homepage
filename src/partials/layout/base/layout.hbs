<!doctype html>
<html lang="en">
  <head>
    {{#block "head"}}
      <meta charset="utf-8">

      <title data-t="raha"></title>

      {{!-- Responsive size for viewport --}}
      <meta name="viewport" content="width=device-width, initial-scale=1">

      <!-- Webfonts -->
      <link href="https://fonts.googleapis.com/css?family=Lato:400,600" rel="stylesheet">

      <!-- Favicons -->
      <link rel="shortcut icon" href="/assets/lib/icons/favicons/favicon.ico">
      <link rel="icon" type="image/png" sizes="32x32" href="/assets/lib/icons/favicons/favicon-32x32.png">
      <link rel="icon" type="image/png" sizes="16x16" href="/assets/lib/icons/favicons/favicon-16x16.png">
      <link rel="apple-touch-icon" sizes="180x180" href="/assets/lib/icons/favicons/apple-touch-icon.png">

      <!-- Safari pinned tab icon -->
      <link rel="mask-icon" href="/assets/lib/icons/safari-pinned-tab.svg" color="#2A945E">

      <!-- Internationalization -->
      <link rel="canonical" href="https://raha.app/">
      {{!-- Hreflang link tags are added at compile time automatically. --}}
      {{> raha/generated/hreflangs}}

      <!-- For the robots -->
      <meta name="description" content="Raha is a community project dedicated to trusted identity and equal opportunity.">
      <meta name="keywords" content="Universal Basic Income,UBI,Blockchain,Identity,Trust,Transparency,Audit,Equality,Security">
      <meta property="og:title" content="Raha">
      <meta property="og:type" content="website">
      <meta property="og:url" content="https://raha.app/">
      <link rel="manifest" href="/assets/lib/manifest.json">

      <style amp-custom>
        {{#block "styles" }}
          @font-face {
            font-family: 'Aleo';
            src: url('/assets/fonts/Aleo-Bold-webfont.woff') format('woff');
            font-weight: 700;
            font-style: normal;
          }

          html, body {
            font-size: 1.1rem;
            background-color: #fcfcfc;
            width: 100%;
          }

          * {
            font-family: 'Lato', sans-serif;
            margin: 0;
            border: 0;
            line-height: 1.58;
          }

          {{!-- text styles --}}
          h1, h2, h3, h4, h5,
          h1 *, h2 *, h3 *, h4 *, h5 * {
            font-family: 'Lato', sans-serif;
            font-weight: 400;
            line-height: 1.1;
          }

          {{!-- text spacing --}}
          article {
            max-width: 700px;
            padding: 0 30px;
            margin: 0 auto;
          }

          article > *:not(:first-child) {
            margin-top: 1rem;
          }

          h1:not(:first-child),
          h2:not(:first-child),
          h3:not(:first-child),
          h4:not(:first-child),
          h5:not(:first-child) {
            margin-top: 1.5rem;
          }

          a:not(.button) {
            color: #6558f5;
            transition: color .1s ease-in;
          }

          a:not(.button):hover, a:not(.button):focus {
            color: #8976ef;
          }

          button, .button {
            font-size: 1.1rem;
            display: inline-block;
            color: white;
            background-color: #6558f5;
            border-radius: 4px;
            padding: 10px 30px;
            text-decoration: none;
            cursor: hand;
            cursor: pointer;
            transition: background-color .1s ease-in;
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
          }

          button:hover, button:focus, .button:hover, .button:focus {
            background-color: #8976ef;
          }

          fieldset {
            padding: 0;
          }

          input[type="text"], input[type="email"] {
            font-size: 1.1rem;
            display: inline-block;
            border: 4px solid transparent;
            border-radius: 4px;
            padding: 10px 30px;
            transition: border-color .1s ease-in;
          }

          input[type="text"]:focus, input[type="email"]:focus {
            border-color: #8976ef;
          }

          h1, article h1 {
            font-size: 1.85rem;
          }

          p:not(:first-child) {
            margin-top: 1rem;
          }

          {{!-- page layout --}}

          {{!-- top padding offsets the fixed header height --}}
          body {
            font-family: sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            padding-top: 80px;
          }

          body > .pageSpacer {
            flex-grow: 1;
          }

          {{!-- fixed header height and position for sticky header --}}
          body > header {
            height: 80px;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: linear-gradient(90deg, #5ec3e9, #96E6B3);
            display: flex;
            align-items: center;
            z-index: 1;
            box-shadow:rgba(0, 0, 0, .2) 0px 0px 4px;
            padding: 0 15px;
          }

          body > header .logoText {
            width: 100px;
          }

          {{!-- global content max-width of 800px --}}
          body > header > .content {
            flex-grow: 1;
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 800px;
            margin: 0 auto;
          }

          #mailingList {
            background: linear-gradient(90deg, #5ec3e9, #96E6B3);
            padding: 40px 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
          }

          #mailingList > form {
            max-width: 800px;
          }

          #mailingList > form > *:not(:last-child) {
            margin-bottom: 20px;
          }

          #mailingList h3 {
            font-family: "Aleo";
            font-weight: 700;
          }

          #mailingList label {
            font-weight: 600;
            margin-right: 15px;
          }

          body > footer {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
            background-color: #4c4c4c;
            color: #efefef;
            text-align: center;
          }
        {{/block }}
      </style>
    {{/block }}
  </head>

  <body id="pageTop">
    {{> raha/layout/base/trackPageview}}
    {{> raha/layout/base/header}}
    {{#block "body"}}
    {{/block}}

    {{!-- Show join form on all pages --}}
    <section id="mailingList">
      <form
        action="https://app.us18.list-manage.com/subscribe/post?u=df19cb2bb2149b51990f5aa31&amp;id=865d902f37"
        method="post"
        target="_blank"
      >
        <h3 data-t="joinForm.title"></h3>
        <p data-t="joinForm.description"></p>
        <fieldset>
          <label for="joinForm.emailInput" data-t="joinForm.email">
          </label>
          <input
            id="joinForm.emailInput"
            class="emailInput" type="email" name="EMAIL"
            placeholder="you@gmail.com" required
          >
        </fieldset>
        <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
        <div style="position: absolute; left: -5000px;" aria-hidden="true">
          <input type="text" name="b_df19cb2bb2149b51990f5aa31_865d902f37" tabindex="-1" value="">
        </div>
        <input class="button" type="submit" data-attr-t value-t="joinForm.submit">
      </form>
    </section>
    <footer>
      <span>Raha, 2018</span>
    </footer>
  </body>

  {{!-- Polyfill for standardized smooth scrolling for browsers that don't yet
  support it. --}}
  {{!-- https://github.com/iamdustan/smoothscroll --}}
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/iamdustan-smoothscroll/0.4.0/smoothscroll.min.js"
    async
  ></script>

  {{!-- Any element of class .mailingListFormLink will smooth scroll to the mailing
  list element. --}}
  <script>
    // run in closure to prevent altering global namespace
    (function() {
      var mailingListLinks = document.querySelectorAll(".mailingListFormLink");
      var HEADER_HEIGHT = 80;
      for (var linkIdx = 0; linkIdx < mailingListLinks.length; ++linkIdx) {
        mailingListLinks[linkIdx].addEventListener("click", function(event) {
          event.preventDefault();
          // would use element.scrollIntoView, but header is fixed position and
          // overlaps the top of the form. Since header is 80px tall, this will
          // scroll correctly.
          scrollTo({
            top:
              // scrollTo scrolls to position relative to top of page,
              // but getBoundingClientRect gets position relative to viewport.
              // So, calculate page y (well, 1px further to avoid an awkward
              // white line) by the difference from body elem and target elem.
              (document.querySelector('#mailingList')
                .getBoundingClientRect().top - HEADER_HEIGHT + 1
              ) - document.body.getBoundingClientRect().top,
            behavior: "smooth",
          });
        })
      }
    })();
  </script>
</html>

