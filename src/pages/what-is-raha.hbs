        <p data-t>whatIsRaha.transactions.text</p>

        <h2 data-t>whatIsRaha.invite.title</h2>
        <p data-t>whatIsRaha.invite.text</p>

        <h2 data-t>whatIsRaha.parliamentFund.title</h2>
        <p data-t>whatIsRaha.parliamentFund.text1</p>

        <h2 id="tbu" data-t>whatIsRaha.tenBillion.title</h2>
        <p data-t>whatIsRaha.tenBillion.text1</p>
        <p data-t>whatIsRaha.tenBillion.text2</p>
        <p data-t>whatIsRaha.tenBillion.text3</p>
