{{#extend "raha/layout/base/layout"}}
  {{#content "styles" mode="append"}}
    .faq {
      margin-top: 30px;
      margin-bottom: 30px;
    }

    .anchorOffset {
      display: block;
      position: relative;
      top: -80px;
      visibility: hidden;
    }
    
    .bareLink {
      text-decoration: none;
    }
  {{/content}}

  {{#content "body"}}
    <main class="faq">
      <article>
        <h1 class="anchorOffset" id="top" data-t>faqTitle</h1>
        
        {{#each faqQuestions as |sectionValue sectionKey|}}
            <h3 data-t>faqSectionTitles.{{sectionKey}}</h3>
            <ul>
                {{#each this}}
                    <li><a href="#{{@key}}" class="bareLink" data-t>faqQuestions.{{sectionKey}}.{{@key}}.q</a></li>
                {{/each}}
            </ul>
        {{/each}}

        {{#each faqQuestions as |sectionValue sectionKey|}}
            <h1 data-t>faqSectionTitles.{{sectionKey}}</h1>
            {{#each this}}
                <a id="{{@key}}" href="#" class="anchorOffset"></a>
                <h3 data-t>faqQuestions.{{sectionKey}}.{{@key}}.q</h3>
                <p data-t>faqQuestions.{{sectionKey}}.{{@key}}.a</p> 
                {{!-- arrow to bar icon --}}
                <a href="#top" class="bareLink">&#10514;</a>
            {{/each}}
        {{/each}}
        
      </article>
    </main>
  {{/content}}
{{/extend }}
