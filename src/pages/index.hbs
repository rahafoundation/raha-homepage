{{#extend "raha/layout/base/layout"}}
  {{#content "styles" mode="append"}}
    .splashPage > .banner {
      padding: 0 20px;
      text-align: center;
    }

    .splashPage > h1 {
      margin-bottom: 40px;
    }

    .splashPage > h2 {
      margin-bottom: 30px;
    }

    .splashPage > h1,
    .splashPage > h2 {
      text-align: center;
    }

    .splashPage > ul.features {
      list-style-type: none;
      padding: 0 30px;
      margin: 50px auto;

      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      text-align: center;
    }

    .splashPage > .features > li {
      flex-basis: 300px;
      margin: 0 20px;
      margin-bottom: 20px;
    }

    .splashPage > .features > li > h3 {
      margin-bottom: .5rem;
    }

    @media only screen and (max-width: 600px) and (min-width: 480px) {
      .splashPage > .features > li {
        flex-basis: 40%;
      }
    }

    @media only screen and (max-width: 480px),
      (max-device-width: 830px) and (-webkit-min-device-pixel-ratio: 2) {
      .splashPage > .features > li {
        flex-basis: 100%;
      }
    }

    .splashPage > .login {
      text-align: center;
    }

  {{/content}}

  {{#content "body"}}
    <main class="splashPage">
      <section class="banner">
        <h1 data-t="splashPage.banner.title"></h1>
        <h2 data-t="splashPage.banner.subtitle"></h2>
      </section>
      <ul class="features">
        <li>
          <h3>
            <a href="/economy" data-t>splashPage.prosperity</a>
          </h3>
          <span data-t>splashPage.prosperityDetails</span>
        </li>
        <li>
          <h3 data-t>splashPage.trust</h3>
          <span data-t>splashPage.trustDetails</span>
        </li>
        <li>
          <h3>
            <a href="/government" data-t>splashPage.rights</a>
          </h3>
          <span data-t>splashPage.rightsDetails</span>
        </li>
      </ul>

      <section class="login">
        <span data-t>splashPage.alreadyMember</span>
        <a href="https://web.raha.app/login" data-t>login</a>
      </section>
    </main>
  {{/content}}
{{/extend }}
